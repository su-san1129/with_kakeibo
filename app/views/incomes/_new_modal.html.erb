<button type="button" class="btn btn-outline-dark col-sm-8 mt-3" data-toggle="modal" data-target="#exampleModalLong">
  給与を登録！
</button>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">給与を登録！</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if @income.errors.any? %>
          <div class="alert alert-danger">
            <p><strong><%= pluralize(@income.errors.count, "件") %> の未入力があります。</strong></p>

            <ul>
            <% @income.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= form_for @income do |f| %>
            <%= f.label :payday, "給料日" %>
            <%= f.date_select :payday, { default: Date.today }, class: "form-control bootstrap-date" %><br>
            <%= f.label :income, "給与" %>
            <%= f.text_field :income,placeholder: "こちらに給与を登録。お仕事お疲れ様です。", class: "form-control" %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.submit "登録",class: "form-control col-sm-3 btn btn-outline-primary my-2" %>
          <% end %>
        </div>
			</div>
			<div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
