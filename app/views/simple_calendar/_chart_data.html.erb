<% if @chart_data.present? %>
	<div class="col-12">
		<div class="card">
		<%= pie_chart @chart_data %>
		</div>
	</div>
<% else %>
<div class="col-12">
	<div class="card chart-card">
	<%= pie_chart ({"食費" => 10, "交通費" => 5, "通信費" => 3}) %>
	</div>
	<div class="chart-text">
		<div class="chart-text-pdg">費用を追加するとグラフが表示されます。</div>
	</div>
</div>
<% end %>