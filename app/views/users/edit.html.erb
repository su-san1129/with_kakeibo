<h2>編集</h2>
<%= form_for @user do |f| %>

  <div class="form-group">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "紹介" %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
