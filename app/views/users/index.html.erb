<div class="row mb-5">
	<div class="col-sm-3">
		<div class="container">
			<div class="card mb-3">
		    <div class="card-body text-center">
		      <p><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "rounded-circle img-fluid", fallback: "no_image.png" ,size: "100x100" %></p>
		      <h4 class="card-title"><%= current_user.name %></h4>
		      <p class="card-text"><%= current_user.introduction %></p>
		      <%= link_to "編集", edit_user_path(current_user), class: "btn btn-outline-dark" %>
		    </div>
		  </div>
	  </div>
  </div>

	<div class="col-sm-9">
		<div class="row">
			<% @users.each do |user| %>
				<div class="col-sm-3">
					<%= link_to user, class: "card mb-3" do %>
				    <div class="card-body text-center">
				      <p><%= attachment_image_tag user, :profile_image, :fill, 60, 60,
				      class: "rounded-circle img-fluid", fallback: "no_image.png" ,size: "100x100" %></p>
				      <h4 class="card-title"><%= user.name %></h4>
				      <p class="card-text"><%= user.introduction %></p>
				    </div>
				  <% end %>
			  </div>
			<% end %>
    </div>
  </div>
</div>