<% if variable_cost.favorited_by?(current_user) %>
  <li class="favorite-icons">
    <%= link_to variable_cost_favorites_path(variable_cost),remote: true, method: :delete, class:"favlink" do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= variable_cost.favorites.count %>
    <% end %>
  </li>
<% else %>
  <li class="favorite-icons">
    <%= link_to variable_cost_favorites_path(variable_cost), method: :post, remote: true, class:"favlink" do %>
      <i class="far fa-heart" aria-hidden="true"></i>
      <%= variable_cost.favorites.count %>
    <% end %>
  </li>
<% end %>