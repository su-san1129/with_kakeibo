<% if @variable_cost.favorited_by?(current_user) %>
  <li>
    <%= link_to variable_cost_favorites_path(@variable_cost), method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= @variable_cost.favorites.count %> いいね
    <% end %>
  </li>
<% else %>
  <li>
    <%= link_to variable_cost_favorites_path(@variable_cost), method: :post, remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= @variable_cost.favorites.count %> いいね
    <% end %>
  </li>
<% end %>