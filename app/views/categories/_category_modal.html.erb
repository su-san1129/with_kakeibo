<button type="button" class="btn btn-outline-dark offset-sm-1 col-sm-10 my-2" data-toggle="modal" data-target="#category">
  カテゴリーを登録！
</button>

<div class="modal fade" id="category" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" style="z-index: 1500" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">カテゴリーを登録！</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if @category.errors.any? %>
          <div class="alert alert-danger">
            <p><strong><%= pluralize(@category.errors.count, "件") %> の未入力があります。</strong></p>

            <ul>
            <% @category.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      	<div class="form-group">
					<%= form_for @category do |f| %>
						<%= f.label :category, "カテゴリー" %>
						<%= f.text_field :category, placeholder: "追加したいカテゴリー名を入力。",
             class: "form-control" %>
						<%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :status, value: 2 %>
						<%= f.submit "登録", class: "btn btn-success col-sm-6 offset-sm-3 my-3" %>
					<% end %>
				</div>
			</div>
			<div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
