<button type="button" class="btn btn-outline-dark my-2" data-toggle="modal" data-target="#category">
  カテゴリーを登録！
</button>

<div class="modal fade" id="category" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" style="z-index: 1500" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">カテゴリーを登録！</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<div class="form-group">
					<%= form_for @category do |f| %>
						<%= f.label :category, "カテゴリー" %>
						<%= f.text_field :category, class: "form-control" %>
						<%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :status, value: 2 %>
						<%= f.submit "登録" %>
					<% end %>
				</div>
			</div>
			<div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
