<%= form_for @variable_cost do |f| %>
	<%= f.label :title, "タイトル" %>
	<%= f.text_field :title, class: "form-control" %>
	<%= f.label :price, "使った金額" %>
	<%= f.text_field :price, class: "form-control" %>
	<%= f.label :category_id, "カテゴリーを選択" %>
	<%= f.collection_select :category_id, Category.all, :id, :category, {}, {class: "form-control"} %>
	<%= f.label :opinion, "内容" %>
	<%= f.text_area :opinion, placeholder: "使ったものの詳細情報を記入。必須ではありません。", class: "form-control" %>
	<%= f.date_select :payment_day, { default: Date.today }, class: "form-control bootstrap-date" %>
	<%#= f.attachment_field :cost_image, class: "image", id: "file" %>
<% end %>